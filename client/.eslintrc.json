{
    "env": {
      "node": true,
      "es2021": true,
      "browser": true // Add this line if your code runs in a browser
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      // Customize your rules if needed
      "no-unused-vars": "off"
    },
    "overrides": [
      {
        "files": ["*.js", "*.jsx"],
        "parser": "@babel/eslint-parser",
        "parserOptions": {
          "babelOptions": {
            "presets": ["@babel/preset-react"]
          }
        }
      }
    ]
  }